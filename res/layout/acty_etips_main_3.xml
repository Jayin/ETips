<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:scrollbarStyle="@null"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.meizhuo.etips.ui.base.CustomItemView
            android:id="@+id/acty_etips_main_course"
            style="@style/Base_CustomView"
            android:layout_height="140dp"
            android:layout_margin="2dp" >

            <!-- android:layout_height="360dp" -->

            <TextView
                android:id="@+id/acty_etips_main_course_time_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="45dp"
                android:text="Night"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/acty_etips_main_course_time_part" >

                <LinearLayout
                    android:id="@+id/acty_etips_main_course_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/acty_etips_main_course_two_up_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/acty_etips_main_course_two_down_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/acty_etips_main_course_two_up_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="18sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/acty_etips_main_course_two_down_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="13sp" >
                    </TextView>
                </LinearLayout>
            </RelativeLayout>

            <TextView
                style="@style/TextView.common"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:text="个人课表"
                android:textColor="@color/white" />
        </com.meizhuo.etips.ui.base.CustomItemView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_margin="2dp"
            android:background="@drawable/ic_bg_main_item_tweet" >

            <ViewFlipper
                android:id="@+id/acty_etips_main_flipper_teweet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoStart="true"
                android:flipInterval="9000" >
            </ViewFlipper>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/acty_etips_main_course_time"
                    style="@style/Better_TextView_ETipsMain"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="2013-9-12 星期四"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/acty_etips_main_course_weekNo"
                    style="@style/Better_TextView_ETipsMain"
                    android:layout_above="@+id/acty_etips_main_course_time"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:text="第1周"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/textView1"
                    style="@style/TextView.common"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/acty_etips_main_course_weekNo"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="55dp"
                    android:text="校园资讯 触手可及"
                    android:textColor="@color/white"
                    android:textSize="29sp" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            style="@style/Base_Layout"
            android:layout_height="140dp"
            android:orientation="horizontal" >

            <com.meizhuo.etips.ui.base.CustomItemView
                android:id="@+id/acty_etips_main_library"
                style="@style/Base_CustomView"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_bg_main_library" />

                <TextView
                    style="@style/Better_TextView_ETipsMain"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="WYU Library"
                    android:textSize="18sp" />
            </com.meizhuo.etips.ui.base.CustomItemView>

            <com.meizhuo.etips.ui.base.CustomItemView
                android:id="@+id/acty_etips_main_wyunews"
                style="@style/Base_CustomView"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_bg_main_news" />

                <TextView
                    android:id="@+id/textView2"
                    style="@style/Better_TextView_ETipsMain"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="WYU News"
                    android:textSize="18sp" />
            </com.meizhuo.etips.ui.base.CustomItemView>
        </LinearLayout>

        <LinearLayout
            style="@style/Base_Layout"
            android:layout_height="140dp"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/Base_Layout"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    style="@style/Base_Layout"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <com.meizhuo.etips.ui.base.CustomItemView
                        android:id="@+id/acty_etips_main_rely_qureyclassroom"
                        style="@style/Base_CustomView"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_bg_main_class" />
                    </com.meizhuo.etips.ui.base.CustomItemView>

                    <com.meizhuo.etips.ui.base.CustomItemView
                        android:id="@+id/acty_etips_main_checkElcecity"
                        style="@style/Base_CustomView"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp" >

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_bg_main_power" />
                    </com.meizhuo.etips.ui.base.CustomItemView>
                </LinearLayout>

                <LinearLayout
                    style="@style/Base_Layout"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <com.meizhuo.etips.ui.base.CustomItemView
                        android:id="@+id/acty_etips_main_msgcenter"
                        style="@style/Base_CustomView"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp" >

                        <ImageView
                            android:id="@+id/acty_etips_main_msgcenter_notifyNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="1dp"
                            android:src="@drawable/ic_notify_news"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_bg_main_message" />
                    </com.meizhuo.etips.ui.base.CustomItemView>

                    <com.meizhuo.etips.ui.base.CustomItemView
                        android:id="@+id/acty_etips_main_setting"
                        style="@style/Base_CustomView"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp" >

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_bg_main_setting" />
                    </com.meizhuo.etips.ui.base.CustomItemView>
                </LinearLayout>
            </LinearLayout>

            <!-- here -->

            <RelativeLayout
                android:id="@+id/acty_etips_main_notes"
                style="@style/Base_CustomView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/imageView3"
                    style="@style/ImageView.base"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_bg_main_note" />

                <TextView
                    style="@style/Better_TextView_ETipsMain"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="Personal Note"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>